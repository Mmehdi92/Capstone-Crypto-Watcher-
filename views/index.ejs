            <button class="btn btn-outline-success"type="submit">Search</button>
        </form>

        <div class="row">
            <div class="col-6">
                <h3>Top 5 currencies</h3>
                <div class="row">
                    <div class="col-6">
                        <% crypto.forEach(cryptoCoin => {%>
                            <ol>
                                <%= cryptoCoin.symbol %>
                            </ol>
                       <% }); %>
                    </div>
                    <div class="col-6">
                      <% crypto.forEach(cryptoCoin => { %>
                        <ol>
                            <%= cryptoCoin.price_24h%>
                        </ol>
                      <% }); %>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <h3> selected Cryptio</h3>
                <div class="row">
                    <div class="col-6">
                        <img class="card-img-top" src="https://picsum.photos/1280/720" alt="Card image cap" />
